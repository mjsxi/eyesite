<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- measures viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= favicon_tag 'images/pp-favicon.png' %>
    <meta name="description" content="Eyesite premium eyewear.">
    <meta property="og:description" content="Eyesite premium eyewear.">
    <meta property="og:image" content="http://pixelpunch.voxmedia.com/images/share.jpg">
    <meta property="og:site_name" content="Eyesite premium eyewear.">
    <meta property="og:title" content="Eyesite premium eyewear.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="http://eyesite-phila.com/">


    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Eyesite premium eyewear." %></title>

    <%= stylesheet_link_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial "partials/_nav" %>
    <div id="fullpage" class="l-page-wrap">
      <%= yield %>
    </div>
    <%= javascript_include_tag  "main" %>
  </body>
</html>